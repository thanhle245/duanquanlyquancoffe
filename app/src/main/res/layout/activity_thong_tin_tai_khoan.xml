<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.ThongTinTaiKhoanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarThongTinTaiKhoan"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:title="Thông tin tài khoản"
        app:titleTextColor="@color/background"
        android:background="@drawable/ruond">

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_Hinh"
        android:layout_width="80dp"
        android:layout_marginTop="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_userttcn" />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_Hinh"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Thanh Lê" />
    <TextView
        android:id="@+id/tvKhachHangMoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvTen"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="khách hàng mới" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#70676060"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tvKhachHangMoi"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvThongTinCaNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Thông tin cá nhân" />

        <TextView
            android:id="@+id/tvDoiMatKhauTTKH"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/purple_700"
            android:layout_weight="1"
            android:text="Đổi mật khẩu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linear1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:text="Email:" />

        <TextView
            android:id="@+id/tvTenThongTinCaNhan"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="thanhle@gmail.com" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear2"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamSinhThongTinCaNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:text="Số điện thoại:" />

        <TextView
            android:id="@+id/tvsdt"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="0909090909" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear3"
        android:background="@color/colorGrey" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suatt"
        android:text="Sửa Thông Tin "
        android:layout_below="@+id/view1"
        android:layout_marginLeft="10dp"
        />



</RelativeLayout>